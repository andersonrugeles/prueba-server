   
  <body>
  <div class="container container-general">
  <div class="row">
    <div class="col">
        <div class="container container-form">
        <h1>Registrar Usuario</h1>
        <form action="/add_user" target="" method="post">
           
            <div class="row">
              <div class="col">
                <input type="email" class="form-control" name="email" id="email" required placeholder="email">
              </div>
            </div>
              <div class="row">
                <div class="col">
                    <input type="password" class="form-control" name="password" required id="password" placeholder="password">
                </div>
              </div>
              <div class="row">
                <div class="col">
                    <button type="submit" class="btn2 btn2-large btn2-block" value="submit">
                        Registrar
                    </button>
                </div>
              </div>
    </div>
   
   </form>
    
      </div>
  </div>
    <div class="col col-table">
      <table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
   {{#each usuarios}}
                            
    <tr>
      <th scope="row">{{idusuarios}}</th>
      <td>{{email}}</td>
      <td class="btn-edit">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modificarUsuario{{idusuarios}}">
         <img src="/static/images/edit.png" width="20px">
      </button>
      
       </td>
      <td class="btn-delete">
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#eliminarUsuario{{idusuarios}}">
      <img src="/static/images/delete.png" width="20px">
      <i class="fas fa-trash-alt"></i>
      </button>

      </td>
    </tr>
    <tr>
  </tbody>
     <!-- Modal Editar-->
          <div class="modal fade" id="modificarUsuario{{idusuarios}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <form action="/edit_user/{{idusuarios}}/{{modificado}}" method="post">
                <div class="modal-content">
                  <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Modificar</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                     </button>
                  </div>
          <div class="modal-body">
            <body>
  
            <div class="input-group input-group-sm mb-3">
             <div class="input-group-prepend">
             <span class="input-group-text" id="inputGroup-sizing-sm">Email</span>
             </div>
      <input type="text" class="form-control" 
        aria-label="Sizing example input" name="email" value="{{email}}" aria-describedby="inputGroup-sizing-sm">
      </div>              

        
</body>
    </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
      </div>
       </div>
</div>
</form>
     <!-- Modal Eliminar-->

          <div class="modal fade" id="eliminarUsuario{{idusuarios}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <form action="delete/{{idusuarios}}" method="post">
                <div class="modal-content">
                  <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Eliminar</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                     </button>
                  </div>
          <div class="modal-body">
                      
      
          <label> Deseas eliminar este producto?</label>
      
      

    </div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
  <button type="submit" class="btn btn-danger">Eliminar</button>
     </div>
      </div>
       </div>
</div>
</form>
    {{/each}}
</table>


    </div>
